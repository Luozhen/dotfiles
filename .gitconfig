[user]
	name = sainaen
	email = sainaen@gmail.com
[color]
	ui = always                        # always use colours
[core]
	editor = vim                       # editor
	excludesfile = ~/.gitignore_global # global .gitignore file
	fileMode = false                   # ignore file rights changes
[merge]
	summary = true                     # add commits summary when merging
	tool = meld                        # use meld as mergetool
[push]
	default = tracking                 # 'git push' will push only the current branch
[alias]
# Log
	l = log --pretty=format:'%C(yellow)%h %Creset%s %Cblue[%cn]' --decorate
	ll = log --graph --oneline --decorate --all
	lastdiff = diff --cached --word-diff HEAD^
# Common aliases
	co = checkout
	st = status -s
	a = add -i
	c = commit
	r = reset
	rh = reset --hard
	mt = mergetool
	dt = !git-diffall                  # https://github.com/thenigan/git-diffall required
# Branches
	br = branch --verbose
	bra = branch --verbose -a          # all branches
	brm = branch --verbose -d          # delete branch
# Stash
	sl = stash list
	ss = stash save
	sa = stash apply
# Ignore
	ignore = update-index --assume-unchanged
	unignore = update-index --no-assume-unchanged
	ignored = !git ls-files -v | grep '^[a-z]'
# Undo
	uncommit = reset --soft HEAD^
	uc = uncommit
	unstage = reset HEAD
	unadd = unstage
	us = unstage
# List all aliases
	la = "!git config -l | grep alias | cut -c 7-"
